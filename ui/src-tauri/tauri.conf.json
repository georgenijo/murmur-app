{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Local Dictation",
  "version": "0.1.0",
  "identifier": "com.local-dictation.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Local Dictation",
        "width": 400,
        "height": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Local Dictation needs microphone access to record your voice for transcription.",
        "NSAppleEventsUsageDescription": "Local Dictation needs accessibility access for global hotkeys."
      }
    }
  }
}
